<h1>Skate Park</h1>
<a href="/">Ir a inicio</a>

<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr />

  <form id="formSkater" >
    <div class="mb-3 row w-50 m-auto">
      <div class="mb-3 col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" readonly id="email" name="email" value="{{skater.email}}"/>
      </div>
      <div class="mb-3 col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" id="nombre" name="nombre" value="{{skater.nombre}}" />
      </div>
      <div class="mb-3 col-12 col-sm-6">
        <label>Password</label>
        <input type="password" class="form-control m-auto" id="password" name="password" value="{{skater.password}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" class="form-control m-auto" value="{{skater.password}}" />
      </div>
      <div class="mb-3 col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input class="form-control m-auto" id="anos_experiencia" name="anos_experiencia" value="{{skater.anos_experiencia}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" id="especialidad" name="especialidad" value="{{skater.especialidad}}" />
      </div>
      <input type="hidden"  id="skaterId" name="id" value="{{skater.id}}">
    </div>
    <div class="mb-3">
      <button class="btn btn-primary" id="actualizar">Actualizar</button>
    </div>
    <div>
      <button class="btn btn-danger" id="eliminar">Eliminar cuenta</button>
    </div>
  </form>
</div>